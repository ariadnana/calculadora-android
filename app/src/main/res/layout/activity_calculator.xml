<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.ariadna.calculadora_android.CalculatorActivity"
    android:background="?attr/colorBackgroundFloating">

    <Button
        android:text="CLR"
        android:id="@+id/clr"
        android:textSize="22sp"
        android:textColor="?attr/colorControlNormal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_width="70sp"
        android:layout_height="120sp"/>

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/div"
        android:layout_below="@+id/clr"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@+id/b9"
        android:layout_toRightOf="@+id/b9"
        android:textSize="38sp"/>

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mult"
        android:textSize="38sp"
        android:layout_below="@+id/div"
        android:layout_toRightOf="@+id/b6"
        android:layout_toEndOf="@+id/b6" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res"
        android:textSize="38sp"
        android:layout_below="@+id/mult"
        android:layout_toRightOf="@+id/b3"
        android:layout_toEndOf="@+id/b3" />

    <Button
        android:text="3"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b3"
        android:layout_alignBaseline="@+id/res"
        android:layout_alignBottom="@+id/res"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:backgroundTint="?attr/colorBackgroundFloating" />

    <Button
        android:text="."
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/coma"
        android:layout_alignBaseline="@+id/igual"
        android:layout_alignBottom="@+id/igual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorBackgroundFloating" />

    <Button
        android:text="2"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b2"
        android:layout_alignBaseline="@+id/res"
        android:layout_alignBottom="@+id/res"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1"
        android:backgroundTint="?attr/colorBackgroundFloating" />

    <Button
        android:text="1"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b1"
        android:layout_alignBaseline="@+id/res"
        android:layout_alignBottom="@+id/res"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorBackgroundFloating" />

    <Button
        android:text="6"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b6"
        android:layout_alignBaseline="@+id/mult"
        android:layout_alignBottom="@+id/mult"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:backgroundTint="?attr/colorBackgroundFloating"/>

    <Button
        android:text="5"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b5"
        android:layout_alignBaseline="@+id/mult"
        android:layout_alignBottom="@+id/mult"
        android:layout_toRightOf="@+id/b4"
        android:layout_toEndOf="@+id/b4"
        android:backgroundTint="?attr/colorBackgroundFloating"/>

    <Button
        android:text="8"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b8"
        android:layout_alignBaseline="@+id/div"
        android:layout_alignBottom="@+id/div"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:backgroundTint="?attr/colorBackgroundFloating"/>

    <Button
        android:text="7"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b7"
        android:layout_alignBaseline="@+id/div"
        android:layout_alignBottom="@+id/div"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorBackgroundFloating"
        android:focusable="true"
        style="?android:borderlessButtonStyle"/>

    <Button
        android:text="9"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b9"
        android:layout_alignBaseline="@+id/div"
        android:layout_alignBottom="@+id/div"
        android:layout_toRightOf="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:backgroundTint="?attr/colorBackgroundFloating"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infinity"
        android:id="@+id/text"
        android:textSize="36sp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:layout_alignBaseline="@+id/clr"
        android:layout_alignBottom="@+id/clr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/clr"
        android:layout_toStartOf="@+id/clr" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum"
        android:textSize="38sp"
        android:layout_below="@+id/res"
        android:layout_toRightOf="@+id/igual"
        android:layout_toEndOf="@+id/igual" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/igual"
        android:textSize="38sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/sum"
        android:layout_alignBottom="@+id/sum"
        android:layout_toLeftOf="@+id/res"
        android:layout_toStartOf="@+id/res" />

    <Button
        android:text="4"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b4"
        android:layout_alignBaseline="@+id/mult"
        android:layout_alignBottom="@+id/mult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorBackgroundFloating" />

    <Button
        android:text="0"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:id="@+id/b0"
        android:layout_alignBaseline="@+id/igual"
        android:layout_alignBottom="@+id/igual"
        android:layout_toLeftOf="@+id/igual"
        android:layout_toStartOf="@+id/igual"
        android:backgroundTint="?attr/colorBackgroundFloating"/>


</RelativeLayout>
